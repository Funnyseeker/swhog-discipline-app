[Unit]
Description=Discipline App Service
After=syslog.target network.target

[Service]
SuccessExitStatus=143

User=root
Group=root

Type=simple

EnvironmentFile=/var/opt/disciplineApp/disciplineApp.conf
WorkingDirectory=/var/opt/disciplineApp
ExecStart=/usr/bin/java -jar /var/opt/disciplineApp/disciplineApp.jar
ExecStop=/bin/kill -15 $MAINPID

[Install]
WantedBy=multi-user.target